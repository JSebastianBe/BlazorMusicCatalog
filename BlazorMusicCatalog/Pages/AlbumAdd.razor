@page "/albumAdd"
@inject NavigationManager NavigationManager;
@inject IAlbumServices AlbumServices;


@if(album == null)
{
    <p><em>Cargando...</em></p>
}else{
    <EditForm Model="@album">
        <table class="table">
            <tr>
                <td>Titulo</td>
                <td>
                    <InputText @bind-Value="@album.Title" class="form-control col-sm-5" />
                </td>
            </tr>
            <tr>
                <td>Imagen de portada</td>
                <td>
                    <InputFile OnChange="LoadAlbumCover" />
                </td>
            </tr>
            <tr>
                <td>Descripción</td>
                <td>
                    <InputText @bind-Value="@album.Description" class="form-control col-sm-5" />
                </td>
            </tr>
            <tr>
                <td>Fecha de lanzamiento</td>
                <td>
                    <InputDate @bind-Value="@album.ReleaseDate" class="form-control col-sm-5" />
                </td>
            </tr>
            <tr>
                <td>Autor</td>
                <td>
                    <InputText @bind-Value="@album.Author" class="form-control col-sm-5" />
                </td>
            </tr>
        </table>
        <h3>Canciones <button class="btn btn-primary" @onclick="AddSongs">Agregar Canción</button></h3>

        @foreach (var song in album.Songs)
        {
            <SongBlock Song="song" OnSongChanged="UpdateAddedSong" />
        }
        <table>
        <tr>
            <td colspan="2" style="text-align: center;">
                <input type="submit" value="Guardar" @onclick="AlbumSave">
                <input type="button" value="Cancelar" class="btn btn-secondary" @onclick="Cancel">
            </td>
        </tr>
    </table>
    </EditForm>

}


@code {

    public Album album = new Album() { ReleaseDate = DateTime.Now,
                                        Songs = new List<Song>() };
    
    override protected async Task OnInitializedAsync()
    {
        try
        {
            album.Songs.Add(new Song() { Number = album.Songs.Count + 1 });
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }
    public void AddSongs()
    {
        album.Songs.Add(new Song() { Number = album.Songs.Count + 1 });
    }

    public async void UpdateAddedSong(Song song)
    {
        var songToUpdate = album.Songs.FirstOrDefault(s => s.Number == song.Number);
        if (songToUpdate != null)
        {
            songToUpdate.Name = song.Name;
            songToUpdate.Path = song.Path;
            songToUpdate.Extension = song.Extension;
        }
    }

    async Task LoadAlbumCover(InputFileChangeEventArgs e)
    {
        var format = "image/png";
        var resizedImageFile = await e.File.RequestImageFileAsync(format, 200, 200);
        var buffer = new byte[resizedImageFile.Size];
        await resizedImageFile.OpenReadStream().ReadAsync(buffer);
        album.CoverImage = buffer;
    }

    protected async Task AlbumSave()
    {
        try
        {
            await AlbumServices.InsertAlbum(album);
            Console.WriteLine($"Álbum guardado con {album.Songs.Count} canciones.");
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }

    public void Cancel()
    {
        NavigateToHome();
    }

    public void NavigateToHome()
    {
        NavigationManager.NavigateTo("/");
    }   

}
