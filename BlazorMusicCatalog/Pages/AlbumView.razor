@page "/albumView/{Id:int}"
@inject IAlbumServices AlbumServices;


@if(album == null || album.Id == 0)
{
    <p><em>Cargando...</em></p>
}else{
    <div class="containter">
        <div class="row flow-offset-1">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <div>
                    <img src="data:image/png;base64,@(Convert.ToBase64String(album.CoverImage))"/>   
                    <h1 class="text-muted">@album.Title</h1>
                </div>
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>

    <br />
    <br />
    <br />

    @foreach(var song in album.Songs)
    {
        <div class="row flow-offset-1">
            <div class="col-md-4">
                <span>@song.Name</span>
            </div>
            <div class="col-md-4">
                <audio controls="controls" id="@song.Id" src="/songs/@(song.Path)" />
           </div>
        </div>  
    }

}


@code {
    [Parameter]
    public int Id { get; set; }

    private Album album;

    protected override async Task OnInitializedAsync()
    {
        if(Id > 0)
            album = await AlbumServices.GetAlbumDetails(Id);
    }

}
